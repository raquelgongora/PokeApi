<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35363F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".actividades.PokemonDetailsActivity">

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="300sp"

        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/pokemonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/pokemonFavorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:onClick="onClickFavorite"
            android:src="@drawable/favorite_empty" />
    </LinearLayout>


    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="wrap_content"


        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pokemonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTypes"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/pokemonWeight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pokemonHeight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pokemonExp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>