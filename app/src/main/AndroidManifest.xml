<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.raquel.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.raquel.pokedex.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.raquel.pokedex.activities.PokemonTypeActivity" />
        <activity android:name="org.raquel.pokedex.activities.FavoritesActivity" />
        <activity android:name=".activities.PokemonTypes" />
        <activity android:name="org.raquel.pokedex.activities.PokemonDetailsActivity" />
        <activity android:name="org.raquel.pokedex.activities.MainActivity"/>
    </application>

</manifest>